pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

function _init()
    pal(9, 128+9, 1)
    pal(12, 128+12, 1)
    cls(7)
end

function _update()
end

function _draw()
    --cls(7)

    for x=0,127 do
        v = (time() / 1 + x/256)
        y = sin(v)*9 + 20
        sspr(x, 0, 1, 64, x, y)
    end

    game = flr(time())

    for i=0,4000 do
        x=flr(rnd(128))
        y=flr(rnd(50)) + 82
        pset(x, y, 7)
    end


    games = {
        {"dna mutations", 22, 98, 12},
        {"tents and trees", 11, 88, 3},
        {"grids of thermometers", 20, 115, 8},
        {"starlight x-2", 60, 90, 1},
        {"3 seconds", 80, 107, 2},
    }
    rand_pos = false
    for ig=game, game+1 do
        i = ig%#games + 1
        x = games[i][2]
        y = games[i][3]
        if not rand_pos then
            x += rnd(3) - 1
            y += rnd(3) - 1
        end
        print(games[i][1], x, y, games[i][4])
        rand_pos = 1
    end

    rectfill(0, 0, 128, 20, 7)
    text = "\x92  2-year anniversary \x92"
    c = flr(rnd(4))
    if (c == 2) c = 8
    if (c == 0) c = 0
    if (c == 1) c = 2
    if (c == 3) c = 9
    x = 10
    tmod = (time() / 5) % 1
    x = (tmod)*(-100-128) + 128
    for il=1,#text do
        xl = x + il*4
        yl = 9 + sin(xl/40)*3
        print(sub(text, il, il), xl, yl, c)
    end


end

